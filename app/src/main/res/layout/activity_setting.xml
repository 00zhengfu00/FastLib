<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/fast_layout_title_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.allen.library.SuperTextView
                android:id="@+id/stv_activityTabSetting"
                style="@style/SupperTextStyleItem"
                android:layout_marginTop="@dimen/dp_margin_item"
                app:sDividerLineType="top"
                app:sLeftTextString="@string/activity_tab_sliding"
                app:sRightIconRes="@null"
                app:sLeftTextColor="@android:color/black"
                app:sRightSwitchMarginRight="12dp"
                app:sRightViewType="switchBtn"
                app:sSwitchIsChecked="true"
                app:sSwitchPadding="10dp"/>

            <com.allen.library.SuperTextView
                android:id="@+id/stv_activityAnimationSetting"
                style="@style/SupperTextStyleItem"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                app:sLeftBottomMaxEms="100"
                app:sLeftBottomTextColor="@android:color/black"
                app:sLeftBottomTextSize="14dp"
                app:sLeftBottomTextString="ALPHAIN-渐显"
                app:sLeftMaxEms="100"
                app:sLeftTextColor="@color/colorTextBlackLight"
                app:sLeftTextSize="12dp"
                app:sLeftTextString="选择Adapter条目加载动画"
                app:sLeftViewGravity="left_center"
                app:sRightIconRes="@null"
                app:sRightTextColor="@android:color/black"
                app:sRightTextString="一直有效"
                app:sRightViewType="switchBtn"
                app:sSwitchIsChecked="true"
                app:sSwitchPadding="10dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>